<script>
    require([
        'jquery',
        'prototype'
    ], function (jQuery) {
        var resultSpan = jQuery('#result');
        jQuery('#apikey_button').click(function () {
            var params = {
            	"test_key": jQuery('#payment_us_mollie_mollie_general_apikey_test').val(),            	
            	"live_key": jQuery('#payment_us_mollie_mollie_general_apikey_live').val()
            	};
            new Ajax.Request('<?php echo $block->getAjaxUrl() ?>', {
                parameters: params,
                loaderArea: false,
                asynchronous: true,
                onCreate: function () {
                    resultSpan.find('.apikey_connecting').show();
                    resultSpan.find('#apikey_result').hide();
                },
                onSuccess: function (response) {
                    console.log(response);
                    resultSpan.find('.apikey_connecting').hide();
                    var resultText = '';
                    if (response.status > 200) {
                        resultText = response.statusText;
                    } else {
                        var json = response.responseJSON;
                        if (typeof json.msg != 'undefined') {
                            resultText = json.msg;
                        }
                    }
                    resultSpan.find('#apikey_result').show();
                    jQuery('#apikey_result').html(resultText);
                }
            });
        });
    });
</script>
